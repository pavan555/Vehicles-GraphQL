{
  "name": "blog-project",
  "version": "1.0.0",
  "description": "This project will be based on Node, GraphQL, TypeScript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "preinstall": "npx only-allow pnpm",
    "start": "pnpm build && node dist/index.js",
    "start:dev": "ts-node-dev --respawn  src/index.ts",
    "start:graphql": "ts-node-dev --respawn --watch ./**/*.graphql src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:dev:graphql": "concurrently \"pnpm start:graphql\" \"pnpm generate\"",
    "generate": "graphql-codegen --watch \"./src/schema.graphql\""
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.6",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@parcel/watcher": "^2.5.1",
    "@types/jest": "^29.0.3",
    "@types/node": "^20.0.0",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "author": "pavan555",
  "license": "ISC",
  "dependencies": {
    "@apollo/datasource-rest": "^6.4.1",
    "@apollo/server": "^4.12.2",
    "dataloader": "^2.2.3",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6"
  },
  "type": "commonjs"
}
